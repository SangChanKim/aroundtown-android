<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="hackgt.crowder.activity.EventInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/titleEvent"
            android:textSize="30sp"
            android:paddingTop="10dp"
            android:text = "Title"
            />


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="49dp"
            android:layout_height="80dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="300"
                android:gravity="center"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/location"
        android:textSize="10sp"
        android:paddingTop="10dp"
        android:text = "longitude, latitude"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:textSize="10sp"
        android:paddingTop="10dp"
        android:text = "this is a description.this is a description.this is a description.this is a description.this is a description.this is a description.this is a description.this is a description.this is a description.this is a description.this is a description."
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price"
        android:textSize="10sp"
        android:paddingTop="10dp"
        android:text = "Price: $10"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Date"
        android:textSize="10sp"
        android:paddingTop="10dp"
        android:text = "Date: Tomorrow"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:textSize="10sp"
        android:paddingTop="10dp"
        android:text = "Time: 8:00PM - 2:00AM"
    />

</LinearLayout>
